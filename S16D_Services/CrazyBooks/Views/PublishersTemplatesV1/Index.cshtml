@model IEnumerable<CrazyBooks_Models.Models.Publisher>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="hstack gap-4 mb-2 page-actions">
    <div class="h1 page-action"><a asp-action="Create"><i class="bi bi-plus-circle-fill" title="Ajouter"></i></a></div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speciality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublisherSite)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speciality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublisherSite)
            </td>
            <td class="text-end">
                <div class="hstack gap-3">
                    <div class="ms-auto h5"><a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-fill" title="Modifier"></i></a></div>
                    <div class="h5"><a asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-info-circle-fill" title="Voir les détails"></i></a></div>
                    <div class="h5"><a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3-fill" title="Supprimer"></i></a></div>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
